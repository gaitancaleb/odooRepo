    <template id="report_saleorder_credit_card">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="dotcreek_janfence_ekit.report_document_credit_card" t-lang="doc.partner_id.lang"/>
